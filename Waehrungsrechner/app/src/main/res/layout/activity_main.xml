<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.kurs.whrungsrechner.MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/LabelInputValue" />

    <EditText
        android:id="@+id/InputValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/LabelInputCurrency" />

    <Spinner
        android:id="@+id/InputCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/Currencies" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/LabelTargetCurrency" />

    <Spinner
        android:id="@+id/OutputCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/Currencies" />

    <Button
        android:id="@+id/CalculateCommand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ButtonCalculate" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/LabelResult" />

    <EditText
        android:id="@+id/ResultOutput"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:inputType="textMultiLine" />
</LinearLayout>
